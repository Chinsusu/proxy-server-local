<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>PGW Mapping Management</title>
  <link rel="stylesheet" href="/static/styles.css">
</head>
<body>
  <header class="header">
    <div class="header-content">
      <div class="logo">ðŸ”’ Proxy Gateway</div>
      <nav class="nav">
        <a href="/" class="nav-link">Dashboard</a>
        <a href="/proxies" class="nav-link">Proxies</a>
        <a href="/manage" class="nav-link">Mappings</a>
      </nav>
    </div>
  </header>

  <div class="container">
    <!-- Alerts container -->
    <div id="alerts"></div>

    <!-- Create New Mapping -->
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Create Client-Proxy Mapping</h3>
      </div>
      <div class="card-content">
        <form id="form-mapping" class="form-inline">
          <div class="form-group">
            <label class="form-label">Client IP Address</label>
            <input type="text" name="client_ip" class="form-input" placeholder="192.168.1.100" required>
            <small class="form-help">IP will automatically get /32 suffix for strict routing</small>
          </div>
          <div class="form-group">
            <label class="form-label">Proxy Server</label>
            <select name="proxy_id" id="select-proxy" class="form-select" required>
              <option value="">Select proxy server...</option>
            </select>
          </div>
          <div class="form-group">
            <label class="form-label">&nbsp;</label>
            <button type="submit" class="btn btn-primary">Create Mapping</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Mapping Management Actions -->
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Network Rules Management</h3>
      </div>
      <div class="card-content">
        <div class="flex gap-2">
          <button id="btn-reconcile" class="btn btn-success">
            ðŸ”§ Apply Rules (Reconcile)
          </button>
          <button id="btn-refresh" class="btn btn-secondary">
            ðŸ”„ Refresh
          </button>
          <button class="btn btn-warning" onclick="pgw.exportMappings()">
            ðŸ“‹ Export Mappings
          </button>
        </div>
        <p class="mt-2 text-muted">
          After creating/deleting mappings, click "Apply Rules" to update nftables configuration.
        </p>
      </div>
    </div>

    <!-- Current Mappings -->
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Active Client Mappings</h3>
        <div class="card-actions">
          <span class="text-muted" id="mapping-count">â€” mappings</span>
        </div>
      </div>
      <div class="table-container">
        <table class="table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Client IP/CIDR</th>
              <th>Proxy Server</th>
              <th>State</th>
              <th>Local Port</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="tbody-mappings">
            <tr>
              <td colspan="6" class="text-center">Loading...</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Network Rules Status -->
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Network Rules Status</h3>
      </div>
      <div class="card-content">
        <div class="system-status">
          <div class="status-item">
            <span class="status-label">NAT Rules (IP):</span>
            <span class="badge badge-secondary" id="nat-rules-status">Unknown</span>
          </div>
          <div class="status-item">
            <span class="status-label">Filter Rules (INET):</span>
            <span class="badge badge-secondary" id="filter-rules-status">Unknown</span>
          </div>
          <div class="status-item">
            <span class="status-label">Last Reconcile:</span>
            <span class="text-muted" id="last-reconcile">â€”</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="/static/app.js"></script>
</body>
</html>
